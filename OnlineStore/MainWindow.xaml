<Window x:Class="OnlineStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineStore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="#B0E5FD" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добро пожаловать в онлайн-магазин 'Челяб-Экспресс'" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="38" FontWeight="Bold" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="1" Text="Разработал: Виталий Днепровский" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>

        <Canvas x:Name="canvas" Grid.RowSpan="2" Background="Transparent"/>
    </Grid>
</Window>
